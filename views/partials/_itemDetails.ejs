<% if (selectedItem) { %>
<h5>Part Details</h5>
<div>
   <button
      class="primary"
      onclick="openModal('editPartDetailsModal', '<%= selectedItem.id %>')"
   >
      Edit Details
   </button>
   <button
      class="success"
      onclick="openModal('addStockModal', '<%= selectedItem.id %>')"
   >
      Add Stock
   </button>
   <button
      class="danger"
      onclick="openModal('removeStockModal', '<%= selectedItem.id %>')"
   >
      Remove Stock
   </button>
</div>
<p><strong>Name:</strong> <%= selectedItem.name %></p>
<p><strong>Stock:</strong> <%= selectedItem.stock %></p>
<p><strong>Price:</strong> $<%= selectedItem.price %></p>

<!-- Specifications Table -->
<h6>Specifications</h6>
<table>
   <thead>
      <tr>
         <th>Specification</th>
         <th>Value</th>
      </tr>
   </thead>
   <tbody>
      <% Object.entries(selectedItem.specifications).forEach(([key, value]) => {
      %>
      <tr>
         <td><%= key %></td>
         <td><%= value %></td>
      </tr>
      <% }); %>
   </tbody>
</table>
<% } else { %>
<p>Select a part to view its details.</p>
<% } %>
