<div id="itemModal" class="modal">
    <div class="modal-dialog">
       <form id="itemForm" method="POST">
          <h5 id="itemModalTitle">Manage Item</h5>
 
          <label for="itemName">Name:</label>
          <input type="text" name="name" id="itemName" required />
 
          <label for="itemPrice">Price:</label>
          <input type="number" step="0.01" name="price" id="itemPrice" required />
 
          <label for="itemStock">Stock:</label>
          <input type="number" name="stock" id="itemStock" required />
 
          <label for="itemCategory">Category:</label>
          <select name="category_id" id="itemCategory" required>
             <% categories.forEach(category => { %>
             <option value="<%= category.id %>"><%= category.name %></option>
             <% }); %>
          </select>
 
          <label for="itemManufacturer">Manufacturer:</label>
          <select name="manufacturer_id" id="itemManufacturer" required>
             <% manufacturers.forEach(manufacturer => { %>
             <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
             <% }); %>
          </select>
 
          <label for="itemSpecifications">Specifications (JSON):</label>
          <textarea name="specifications" id="itemSpecifications" rows="4"></textarea>
 
          <button type="submit" class="primary">Save</button>
          <button type="button" class="secondary" onclick="closeModal('itemModal')">Cancel</button>
       </form>
    </div>
 </div>
 